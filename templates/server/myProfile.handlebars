<main>
    <div class="container vh-100 d-flex justify-content-center align-items-center">
        <div class="w-50 shadow-lg p-4 rounded" style="background-color: #f9f9f9;">
            <h2 class="text-center mb-4" style="color: #1167b1;">Mi perfil</h2>
            <form method="post" id="editUser" action="/editUser">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <input type="text" placeholder="Nombre" name="name" class="form-control form-control-lg mb-2"
                            value="{{user.name}}" disabled />
                    </div>
                    <div class="col-md-6">
                        <input type="text" placeholder="Apellidos" name="lastname" class="form-control form-control-lg"
                            value="{{user.lastname}}" disabled />
                    </div>
                </div>
                <div class="mb-3">
                    <input type="text" placeholder="Usuario" name="username" class="form-control form-control-lg"
                        value="{{user.username}}" disabled />
                </div>
                <div class="mb-3">
                    <input type="email" placeholder="Correo" name="email" class="form-control form-control-lg"
                        value="{{user.email}}" disabled />
                </div>
                <div class="mb-3">
                    <input type="text" placeholder="No. de tarjeta" name="card" class="form-control form-control-lg"
                        value="{{user.card}}" disabled />
                </div>
                <div class="mb-3">
                    <input type="text" placeholder="Titular de tarjeta" name="cardholder"
                        class="form-control form-control-lg" value="{{user.cardholder}}" disabled />
                </div>
                <button type="submit" class="btn btn-primary w-100"
                    style="background-color: #1167b1; border-color: #1167b1;">
                    actualizar datos
                </button>
            </form>
        </div>
    </div>
</main>